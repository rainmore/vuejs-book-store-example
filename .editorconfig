# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8
indent_style = space
max_line_length = 140
tab_width = 4
ij_smart_tabs = false
ij_visual_guides = 80, 120, 140, 256
ij_wrap_on_typing = false

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab

[*.{md}]
indent_size = 2

[*.{js,ts,tsx,scss,css,yml,json,html,vue}]
indent_size = 2
